{
  "permissions": {
    "allow": [
      "Bash(python scripts/start-dev*)",
      "Bash(python scripts/run-checks*)",
      "Bash(python scripts/setup-worktree*)",
      "Bash(python scripts/github-issue-updater*)",
      "Bash(source .venv/bin/activate*)",
      "Bash(gh issue *)",
      "Bash(gh pr create *)",
      "Bash(gh pr view *)",
      "Bash(gh pr checks *)",
      "Bash(gh pr comment *)",
      "Bash(gh pr edit *)",
      "Bash(gh pr list *)",
      "Bash(gh pr ready *)",
      "Bash(gh label *)",
      "Bash(gh run list *)",
      "Bash(gh run view *)",
      "Bash(gh run watch *)",
      "Bash(gh api repos/*/milestones*)",
      "Bash(gh api repos/*/pulls/*/comments*)",
      "Bash(gh api repos/*/pulls/comments/*/replies*)",
      "Bash(git add *)",
      "Bash(git checkout *)",
      "Bash(git commit *)",
      "Bash(git branch *)",
      "Bash(git push *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git status *)",
      "Bash(git fetch *)",
      "Bash(git pull *)",
      "Bash(git stash *)",
      "WebSearch",
      "WebFetch",
      "Bash(playwright-cli open:*)",
      "Bash(playwright-cli close:*)",
      "Bash(playwright-cli:*)",
      "Bash(pytest *)",
      "Bash(ruff *)",
      "Bash(pyright *)"
    ],
    "deny": [
      "Bash(git push origin main*)",
      "Bash(git push origin master*)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo 'INSTRUCTION: If relevant, invoke skills from .claude/skills/ using Skill(skill-name)'"
          }
        ]
      }
    ]
  }
}
